{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "upload new version",
            "type": "shell",
            "command": "./bump_version.sh ${input:tag}",
            "windows": {
                "command": ".\\bump_version.ps1 ${input:tag}"
            }
        }
    ],
    "inputs": [
        {
            "id": "tag",
            "type": "command",
            "command": "memento.promptString",
            "args": {
                "id": "tag",
                "description": "mod version tag",
                "default": "v1.0.0"
            }
        }
    ]
}
